{
  "name": "recharge-earn-be",
  "version": "1.0.0",
  "main": "dist/app.js",
  "scripts": {
    "build": "tsc && npm run copy:templates",
    "copy:templates": "node scripts/copy-templates.js",
    "start": "node dist/app.js",
    "dev": "tsx watch src/app.ts",
    "test": "NODE_ENV=test jest --passWithNoTests"
  },
  "author": "Popoola Sinaayo",
  "license": "ISC",
  "description": "Recharge and Earn Backend API",
  "dependencies": {
    "axios": "^1.6.2",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-validator": "^7.0.1",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.0.3",
    "nodemailer": "^6.10.1"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "roots": ["<rootDir>/src", "<rootDir>/tests"],
    "testMatch": ["**/*.test.ts"],
    "moduleFileExtensions": ["ts", "js", "json"]
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/jest": "^29.5.11",
    "@types/supertest": "^6.0.2",
    "jest": "^29.7.0",
    "@types/cors": "^2.8.19",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/node": "^20.10.6",
    "@types/nodemailer": "^6.4.14",
    "copyfiles": "^2.4.1",
    "nodemon": "^3.0.2",
    "ts-jest": "^29.1.1",
    "tsx": "^4.7.0",
    "supertest": "^6.3.4",
    "typescript": "^5.3.3"
  }
}
